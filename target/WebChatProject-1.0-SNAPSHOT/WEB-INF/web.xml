<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/Web_chat</res-ref-name>
        <res-type>javax.sql.ConnectionPoolDataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>SigninServlet</servlet-name>
        <servlet-class>com.webchatproject.register.SigninServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.webchatproject.register.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateNewRoom</servlet-name>
        <servlet-class>com.webchatproject.room.CreateNewRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUserFromDB</servlet-name>
        <servlet-class>com.webchatproject.room.GetUserFromDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMemberIntoRoom</servlet-name>
        <servlet-class>com.webchatproject.room.AddMemberIntoRoom</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SigninServlet</servlet-name>
        <url-pattern>/SigninServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateNewRoom</servlet-name>
        <url-pattern>/CreateNewRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserFromDB</servlet-name>
        <url-pattern>/GetUserFromDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMemberIntoRoom</servlet-name>
        <url-pattern>/AddMemberIntoRoom</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
